<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/carInfoCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:elevation="2dp">

            <include layout = "@layout/card_car_information"/>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/grade_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green_primary"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <!-- Title, secondary and supporting text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/driverGrade"
                        android:layout_marginBottom="30dp"
                        android:textSize="24sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/excellentGradePlaceholder"
                        android:layout_marginBottom="20dp"
                        android:textSize="32sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        />

                </LinearLayout>


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:id="@+id/rapid_accel_card"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/slate_primary"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <!-- Title, secondary and supporting text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rapidAcc"
                        android:layout_marginBottom="10dp"
                        android:textSize="24sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/rapid_accel_count"
                        android:layout_marginBottom="10dp"
                        android:textSize="68sp"
                        android:textColor="#028A0F"
                        android:layout_gravity="center"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/instances"
                        android:layout_marginBottom="20dp"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:id="@+id/high_speed_card"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/slate_primary"
                android:layout_margin="8dp">

                <!-- Add your card content here -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <!-- Title, secondary and supporting text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/highSpeed"
                        android:layout_marginBottom="10dp"
                        android:textSize="24sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_marginBottom="10dp"
                        android:textSize="84sp"
                        android:textColor="#028A0F"
                        android:layout_gravity="center"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/instances"
                        android:layout_marginBottom="20dp"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:id="@+id/sharp_corners_card"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/slate_primary"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <!-- Title, secondary and supporting text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sharpCorners"
                        android:layout_marginBottom="10dp"
                        android:textSize="24sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_marginBottom="10dp"
                        android:textSize="84sp"
                        android:textColor="#028A0F"
                        android:layout_gravity="center"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/instances"
                        android:layout_marginBottom="20dp"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:id="@+id/hard_braking_card"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/slate_primary"
                android:layout_margin="8dp">

                <!-- Add your card content here -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <!-- Title, secondary and supporting text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hardBraking"
                        android:layout_marginBottom="10dp"
                        android:textSize="24sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_marginBottom="10dp"
                        android:textSize="84sp"
                        android:textColor="#028A0F"
                        android:layout_gravity="center"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/instances"
                        android:layout_marginBottom="20dp"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp">
        </Space>

<!--        Parent Vertical Linear Layout-->
    </LinearLayout>

</ScrollView>